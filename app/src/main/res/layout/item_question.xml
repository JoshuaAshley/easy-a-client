<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/workout_card_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textViewQuestionNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:text="Q"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/progressImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/camera_icon"
            android:background="@drawable/textfield"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/textViewQuestionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Loading Question Description......"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/button"
        android:text="View Question"
        android:textAllCaps="false"
        android:layout_marginHorizontal="40dp"/>

</LinearLayout>
