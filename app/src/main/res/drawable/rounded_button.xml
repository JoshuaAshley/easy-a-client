<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#0044CC"/> <!-- Pressed color -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/easy_a_blue"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>