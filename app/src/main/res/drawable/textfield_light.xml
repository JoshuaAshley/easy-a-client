<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Text field background when focused and pressed -->
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color when focused and pressed -->
            <corners android:radius="15dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@color/gray" /> <!-- Border color and width -->
        </shape>
    </item>
    <!-- Text field background when focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color when focused -->
            <corners android:radius="15dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@color/gray" /> <!-- Border color and width -->
        </shape>
    </item>
    <!-- Text field default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Default background color -->
            <corners android:radius="15dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@color/gray" /> <!-- Border color and width -->
        </shape>
    </item>
</selector>