<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/> <!-- Pressed color -->
            <corners android:radius="15dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- Default background color -->
            <corners android:radius="15dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>